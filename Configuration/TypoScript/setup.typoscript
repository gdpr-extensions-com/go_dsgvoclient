plugin.tx_godsgvoclient_cookieconsentmodal {
    view {
        templateRootPaths.0 = EXT:go_dsgvoclient/Resources/Private/Templates/
        templateRootPaths.1 = {$plugin.tx_godsgvoclient_cookieconsentmodal.view.templateRootPath}
        partialRootPaths.0 = EXT:go_dsgvoclient/Resources/Private/Partials/
        partialRootPaths.1 = {$plugin.tx_godsgvoclient_cookieconsentmodal.view.partialRootPath}
        layoutRootPaths.0 = EXT:go_dsgvoclient/Resources/Private/Layouts/
        layoutRootPaths.1 = {$plugin.tx_godsgvoclient_cookieconsentmodal.view.layoutRootPath}
    }
    persistence {
        storagePid = {$plugin.tx_godsgvoclient_cookieconsentmodal.persistence.storagePid}
        #recursive = 1
    }
    features {
        #skipDefaultArguments = 1
        # if set to 1, the enable fields are ignored in BE context
        ignoreAllEnableFieldsInBe = 0
    }
    mvc {
        #callDefaultActionIfActionCantBeResolved = 1
    }
}

