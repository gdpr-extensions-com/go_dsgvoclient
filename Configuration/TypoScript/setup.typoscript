# these classes are only used in auto-generated templates
plugin.tx_godsgvoclient._CSS_DEFAULT_STYLE (
    textarea.f3-form-error {
        background-color: #FF9F9F;
        border: 1px #FF0000 solid;
    }

    input.f3-form-error {
        background-color: #FF9F9F;
        border: 1px #FF0000 solid;
    }

    .tx-go-dsgvoclient table {
        border-collapse: separate;
        border-spacing: 10px;
    }

    .tx-go-dsgvoclient table th {
        font-weight: bold;
    }

    .tx-go-dsgvoclient table td {
        vertical-align: top;
    }

    .typo3-messages .message-error {
        color: red;
    }

    .typo3-messages .message-ok {
        color: green;
    }
)
